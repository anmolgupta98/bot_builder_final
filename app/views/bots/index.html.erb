<div class="container">
	<div class="row"  >
		<div class = "col-1 container-fluid bg-dark" style = "height: 834px; top: -100%; left: -25%; position: relative;">
		   
		</div>
		<div class = "col-11" style = "left:-300px;">
		    <%= render 'layouts/navigation' %>
			<div class = "container" style = "margin-left: 300px;">
                <%= render 'layouts/messages'%>
			</div>
		    <div class = "row">
				<div class="col-4" style = "margin-top: 2%; left:20%" >
				
					<span style = "font-size: 30px;">â‡½</span>
					<strong > Whatsapp Bot </strong>
					<div class = "container p-3 bg-dark text-white mt-4 text-center" style = "height: 650px; border-radius: 3%; width: 130%; border: solid 1px #707070;background-color: var(--slate); ">
						<h1 style = "margin-top: 200px;"> Create Whatsapp Bot </h1>
						<p>Set up Business messages to send your clients automatically when they reach out to you</p>
						<%= link_to 'Create New Bot ', new_bot_path, class: "btn btn-success btn-lg" %>
					</div>
				</div>

				<div class="col-7" style = "margin-left: 8%; margin-top: 2%; left:30%">
					<div style = "margin-top: 11%;"></div> 
					<strong>My Whatsapp Bots </strong>
					<div class = "row mt-4" style = "width: 130%">
						<div class = "col-1">

						</div>
						<div class="col-2">
							Bot Name
						</div>
						<div class="col-3" >
							Last modified
						</div>
						<div class="col-3" >
							&nbsp;&nbsp; Status
						</div>
						<div class="col-3" >
							&nbsp;&nbsp; Action
						</div>
					</div>
					<br>
					<% for bot in @bots do %>
						<div class="Rectangle-648" style = "width: 130%; margin-top: 2%;">
							<div class = "row" >
								<div class="col-3" style = "padding-left: 8%;margin-top: 2%;">
									&nbsp;&nbsp;&nbsp;<%= bot.name %>
								</div>
								<div class="col-3" style = "margin-top: 2%;" >
									<%= time_ago_in_words(bot.updated_at) %>
								</div>
								<div class="col-3" style = "margin-top: 2%;"  >
									<span class="mr-2" id= <%= "update_active_toggle"+ (bot.id).to_s %> >
										<% if bot.status == "Active" %>
											Active
										<% else%>
											Inactive
										<% end %>
									</span>
									<label class="switch my-auto">
									<% if bot.status == "Active" %>
										<input type="checkbox" checked data-remote="true" class="slider round" data-method="get" data-url= <%= updateactive_path(bot.id )%>>
									<% else %>
										<input type="checkbox" data-remote="true" class="slider round" data-method="get" data-url= <%= updateactive_path(bot.id) %>>
									<% end %>
									<span class="slider round"></span>
									</label>
								</div>
								<div class="col-3" style = "margin-top: 1%;" >
									<%= link_to 'Edit', composemessage_path(bot.id), class:"btn btn-dark btn-sm"  %>
	                                <span class="dropdown">
										<button class="btn dropdown-toggle" type="button"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											<%= image_tag("hamburger.png", size: "30" ) %>
										</button>
										<style>.dropdown-toggle::after { 
											content: none;
										    } 
										</style>
										<div class="dropdown-menu">
										    <%= link_to 'Statistics', statistics_path(bot.id), id:"customlink", class: "dropdown-item" %> 
											<%= link_to 'Test the bot', test_path(bot.id), id:"customlink", class: "dropdown-item"  %>
											<%= link_to 'Clone', bots_path, id:"customlink", class: "dropdown-item"  %>  
                                            <%= link_to 'Delete', bots_path(bot.id), method: :delete, data: { confirm: "Are you sure about deleting this bot. This is an irreversible action!" }, id:"customlink", class: "dropdown-item"   %>    
										</div>
									</span>

								    

								</div>
							</div>
							
						</div >
					<% end %>
				</div>	
			</div>
        </div>
	</div>
</div>	






