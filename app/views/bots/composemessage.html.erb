<!-- First navbar -->
<div id = "bot_navigation">
  <%= render 'bots/botnavigation' %>
</div>
<!-- Second navbar -->

<nav class="mynavbar bg-white">
  <div class="row">
    <div class="col-8">
      <ul class="steps">
        <li class="past" style = "width: 20px;">
          <span>
            <strong>Steps</strong>
          </span>
        </li>
        <li class="future">
          <span>
            <%= link_to edit_bot_path(@bot.id), class:"navbar_custom_links" do%>
              <div style="height: 50px; width: 200px;">1. Bot Settings</div>
            <% end %>
          </span><i></i>
        </li>
        <li class="present">
          <span>
            <%= link_to composemessage_path(@bot.id), class:"navbar_custom_links" do%>
              <div style="height: 50px; width: 200px;">2. Compose Message</div>
            <% end %>
          </span><i></i>
        </li>
      </ul>
    </div>
    <div class="col-2 border text-center">
      <div class="text-center navbar_content_height_undo" style=  "margin-top: -1%;">
	    <%= link_to test_path(@bot.id) do %>
			<div style = "height: 45px; width: 250px;" >
			<%= image_tag('p.png')%>
			<%= link_to 'Test the bot', test_path(@bot.id), style: "color: black; text-decoration: none;" %>
			</div>
		<% end %>
      </div>
    </div>
    <div class="col-2 border">
       <div class="text-center navbar_content_height_undo" >
        Activate
      </div>
    </div>
  </div>
</nav> 

<div class ="container">
	<%= render 'layouts/messages' %> 
</div>

<!-- Main content -->
<div class="container-fluid mt-4" style = "margin-left: 4%;" >
	<div class="row mt-4">
		<div class="col-12" >
			<%= render 'bots/composemessagemain' %>
		</div>
	</div>
</div>
  
