<!-- First navbar -->
<div id = "bot_navigation">
  <%= render 'bots/botnavigation' %>
</div>
<!-- Second navbar -->

<nav class="container-fluid bg-white" style = "height: 60px;">
  <div class="row">
    <div class="col-8">
      <ul class="steps">
        <li class="past" style = "width: 20px;">
          <span>
            <strong>Steps</strong>
          </span>
        </li>
        <li class="future">
          <span>
            <%= link_to edit_bot_path(@bot.id), class:"navbar_custom_links" do%>
              <div style="height: 50px; width: 200px;">1. Bot Settings</div>
            <% end %>
          </span><i></i>
        </li>
        <li class="present">
          <span>
            <%= link_to composemessage_path(@bot.id), class:"navbar_custom_links" do%>
              <div style="height: 50px; width: 200px;">2. Compose Message</div>
            <% end %>
          </span><i></i>
        </li>
      </ul>
    </div>
    <div class="col-2 border text-center">
      <div class="text-center navbar_content_height_undo" style=  "margin-top: -1%;">
	    <%= link_to test_path(@bot.id) do %>
			<div style = "height: 45px; " >
			<%= image_tag('p.png')%>
			<%= link_to 'Test the bot', test_path(@bot.id), style: "color: black; text-decoration: none;", class: "navbar_custom_links" %>
			</div>
		<% end %>
      </div>
    </div>
    <div class="col-2 border">
       <div class="text-right navbar_content_height_undo navbar_custom_links"  style = "margin-top: 4px;">
        Activate
      </div>
    </div>
  </div>
</nav> 

<div class ="container">
	<%= render 'layouts/messages' %> 
</div>

<!-- Main content -->
<div class="container-fluid" style = "overflow-y: auto; overflow-x: auto;  padding-top: 30px;  padding-left: 50px; height: 720px;" id = "style-1" >
  <%= render 'bots/composemessagemain', parent_id: 0 %>  
</div>
  
